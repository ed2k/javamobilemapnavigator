<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project jdesktopsearch">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="JDesktopSearch-2.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Built-By" value="${user.name}"/>
                <attribute name="Main-Class" value="de.joergjahnke.jdesktopsearch.Main"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="bin"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/jtds-1.1.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/log4j-1.2.14.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/tm-extractors-0.4.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/bcmail-jdk14-132.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/bcprov-jdk14-132.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/FontBox-0.1.0-dev.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/lucene-core-2.4.0.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/lucene-highlighter-2.4.0.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/PDFBox-0.7.3.jar"/>
        </jar>
    </target>
</project>
